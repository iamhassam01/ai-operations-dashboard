{
  // OpenClaw Configuration for AI Operations Agent "Bob"
  // Environment: Production (Hostinger KVM 1 â€” 76.13.40.146)

  // Gateway configuration
  gateway: {
    mode: "local",
    port: 18789,
    bind: "loopback",
    auth: {
      mode: "token",
      token: "YOUR_GATEWAY_TOKEN_HERE"
    },
    reload: {
      mode: "hybrid"
    }
  },

  // Agent configuration
  agents: {
    defaults: {
      workspace: "~/.openclaw/workspace",
      model: {
        primary: "openai/gpt-4o"
      },
      userTimezone: "Europe/Prague",
      timeFormat: "24",
      skipBootstrap: true,
      thinkingDefault: "low",
      heartbeat: {
        every: "30m",
        target: "none",
        activeHours: {
          start: "08:00",
          end: "22:00",
          timezone: "Europe/Prague"
        }
      },
      contextTokens: 128000
    },
    list: [
      {
        id: "main",
        default: true,
        name: "Bob",
        workspace: "~/.openclaw/workspace",
        identity: {
          name: "Bob",
          emoji: "ðŸ¤–",
          avatar: "B"
        }
      }
    ]
  },

  // Webhook hooks
  hooks: {
    enabled: true,
    token: "YOUR_HOOK_TOKEN_HERE",
    path: "/hooks"
  },

  // Cron scheduler
  cron: {
    enabled: true,
    maxConcurrentRuns: 2
  },

  // Voice Call Plugin (disabled until Twilio credentials provided)
  plugins: {
    entries: {
      "voice-call": {
        enabled: false
      }
    }
  },

  // Logging
  logging: {
    level: "info",
    file: "/tmp/openclaw/openclaw.log",
    consoleLevel: "info",
    consoleStyle: "pretty"
  },

  // Session management
  session: {
    reset: {
      mode: "daily",
      atHour: 4
    }
  },

  // UI
  ui: {
    seamColor: "#3B82F6",
    assistant: {
      name: "Bob",
      avatar: "B"
    }
  }
}
